@page
@model BlogApp.Pages_Blog.EditModel

@{
    ViewData["Title"] = "Edit";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="/Blog">Blog</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit</li>
    </ol>
</nav>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Blog.Id" />
            <div class="form-group">

                <label asp-for="Blog.Title" class="control-label"></label>
                <input asp-for="Blog.Title" class="form-control" />
                <span asp-validation-for="Blog.Title" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="Blog.CreatedDate" class="control-label"></label>
                <input asp-for="Blog.CreatedDate" class="form-control" />
                <span asp-validation-for="Blog.CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="Blog.Banner" class="control-label"></label>
                <input type="file" asp-for="Blog.Banner" name="BannerFile" id="Banner" class="form-control"
                    accept="image/jpeg,image/png,image/gif" />
                <span asp-validation-for="Blog.Banner" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="Blog.Content" class="control-label"></label>
                <textarea asp-for="Blog.Content" id="ContentEditor" class="form-control"></textarea>
                <span asp-validation-for="Blog.Content" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <a asp-page="./Index" class="btn btn-primary"><i class="bi bi-arrow-left"></i> Back to List</a>
                <button type="submit" class="btn btn-dark">
                    <i class="bi bi-floppy-fill"></i> Save
                </button>

            </div>
        </form>
    </div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function (event) {
        var quill = new Quill('#ContentEditor', {
            theme: 'snow'
        });
    });
</script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
