@page
@model BlogApp.Pages_User.IndexModel

@{
    ViewData["Title"] = "Index";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active">User</li>
    </ol>
</nav>
<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Users</h1>
    <a asp-page="Create" class="btn btn-dark">
        <i class="bi bi-plus-lg"></i> Create New
    </a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.User)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>                
                <td class="ml-5">
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td class="text-end">
                    <a asp-page="./Edit" class="btn btn-dark" asp-route-id="@item.Id"><i class="bi bi-pencil"></i> Edit</a>
                    <a asp-page="./Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>